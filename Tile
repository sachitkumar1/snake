package Snake;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.Rectangle;

public class Tile extends Rectangle {
	
	private Color color;
	private int direction, row, col, dX, dY, size = 20;
	
	public Tile (int x, int y, int width, int height, Color c, int row, int col) {
		super(x,y,width,height);
		this.row=row;
		this.col=col;
		color = c;
	}
	
	public void setDirection (int direct) {
		direction = direct;
	}
	public int getDirection () {
		return direction;
	}
	public void setRow(int r) {
		row = r;
	}
	public void setCol (int c) {
		col = c;
	}
	public int getRow () {
		return row;
	}
	public int getCol () {
		return col;
	}
	public void move() {
	    if (direction == 0) {
	        x -= width;
	        col--;
	    } else if (direction == 1) {
	        y -= height;
	        row--;
	    } else if (direction == 2) {
	        x += width;
	        col++;
	    } else if (direction == 3) {
	        y += height;
	        row++;
	    }
	}

	public void draw(Graphics2D pb) {
		pb.setColor(color);
		pb.draw(this);
	}
	public void fill(Graphics2D pb) {
		pb.setColor(color);
		pb.fill(this);
	}
	
	public void setColor(Color c) {
	    this.color = c;
	}

}
